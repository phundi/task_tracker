<!DOCTYPE html>
<html>
<head>
  <title>Task Tracker</title>

  <link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/sb-admin.css" rel="stylesheet">
	<link href="/css/plugins/morris.css" rel="stylesheet">
    <link href="/css/layout.css" rel="stylesheet">
    <link href="/css/layout.css" rel="stylesheet">
    <link href="/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="/css/datepicker.css" rel="stylesheet">

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="Peter Makata" content="Homepage Task Tracker">
    <link href="/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css">

  <%= csrf_meta_tags %>
  <style>
      .panel{
          border-radius: 0px !important;
      }

      .display-details strong{
        width: 37%;
      }

      .panel-primary .panel-heading{
          background: ghostwhite !important;
          color: darkslategray;
          vertical-align: middle;
          padding: 7px;
          padding-left: 25px;
          font-size: 1.2em;
      }
      .dataTables_wrapper{
        margin-top: 5px;
      }
      .dataTables_filter input{
          float: right;
      }

      .btn-sm{
          border-radius: 0px;
          border-left: 2px solid darkslategray;
      }
      .cost{
          color: red;
          font-weight: bold;
          font-size: 15px;
      }
      .dataTables_wrapper th{
          background: lightsteelblue;
          color: black;
          padding: 10px !important;
      }
      .dataTables_wrapper td{
          padding: 5.5px !important;
      }
      .panel{
          margin-top: 12px;
          box-shadow: 7px 7px 3px #888888;
      }

      .panel-heading{
          box-shadow: 4px 4px 3px #888888;
      }
      .btn{
          margin: 5px;
          float: right;
          margin-top: 0px;
          margin-bottom: 0px;
      }

      img {
          user-drag: none;
          user-select: none;
          -moz-user-select: none;
          -webkit-user-drag: none;
          -webkit-user-select: none;
          -ms-user-select: none;
          pointer-events: none;
      }
      input, select{
          box-shadow: 2px 2px 2px #ccc;
      }
  </style>
</head>
<body>
    <div id="wrapper">

      <!-- Navigation -->
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">

          <a class="navbar-brand" href="/">Task Trackers</a>
        </div>
        
        <% if @notifications.length > 0%>
         <div class="notification" style="margin-left: 40%; ">

          <a class="navbar-brand" style="color: #FF9900 !important;">You have <%=@notifications.length%> new task(s) assigned to you</a>
        </div>
        <% end %>
        
        <!-- Top Menu Items -->
        <ul class="nav navbar-right top-nav">
          <%
              img_url =   (@cur_user.image.present? && File.exists?("#{Rails.root}/public/#{@cur_user.image}")) ? "#{@cur_user.image}?cache=none" : "/uploads/#{@cur_user.gender}.png?cache=none"
          %>
          <a href="/" style="float: left;margin: 4px;"> <img src="<%= img_url %>" alt="<i class='fa fa-user'></i>" class='img-circle' width='40' height='40'></a>
          <li class="dropdown" style="float: right">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">  <%= @cur_user.username%> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li>
                <a href="/user/view?user_id=<%= @cur_user.id%>"><i class="fa fa-fw fa-user"></i> My Account</a>
              </li>
              
              <li class="divider"></li>
              <li>
                <a href="/logout"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
              </li>
            </ul>
          </li>
        </ul>
        <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
          <ul class="nav navbar-nav side-nav">
          
            <li id="clients">
              <a href="/task/index?active_tab=clients"><i class="fa fa-fw fa-list"></i> Home </a>
            </li>
                     
            <li id="access">
              <a href="javascript:" data-toggle="collapse" data-target="#acc-c"><i class="fa fa-cog">
              </i> Access Controls <i class="fa fa-fw fa-caret-down"></i>
              </a>
              <ul id="acc-c" class="collapse">
                <li>
                  <a href="/user/index?active_tab=access">Users</a>
                </li>                
                <li>
                  <a href="/user/user_roles?active_tab=access">Assign User Roles</a>
                </li>
              </ul>
            </li>
           
          </ul>
        </div>
        <!-- /.navbar-collapse -->
        <script src="/js/jquery.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        <script src="/js/datepicker.js"></script>

        <%=javascript_include_tag "datatables/jquery.dataTables.min" %>

      </nav>

      <div id="page-wrapper">

        <%= yield%>
      </div>
    </div>
      
          

</body>

<script>

    function __$(id){
        return document.getElementById(id)
    }
</script>

<style>

    .trail-header{
        background: #f8f8ff;
    }

    .enc-row td{
        border: 1px solid #f8f8ff !important;
        padding: 7px;
        padding-left: 20px;
        width: 50%;
    }
    .enc-row .header{
        font-weight: bold;
        text-align: right;
        padding-right: 20px;
    }

  .breadcrumb{
      margin-top: 10px !important;
  }
</style>
</html>
