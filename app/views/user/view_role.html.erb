

<div>
  <ol class="breadcrumb " style="margin: 3px; padding: 5px;">
    <li><a href="/">Home</a></li>
    <li><a href="/user/roles">Roles</a></li>
    <li><a class='active' href="/user/view_role?role_id=<%=@role.id%>">View Roles</a></li>
  </ol>
</div>
<div class="panel panel-primary">
    <div class="panel-heading ">
      <span class="glyphicon glyphicon-user"></span>
      <b>View Role</b>
      <div class="panel-btn">
        <a class="btn btn-sm btn-info" href="/user/edit_role?role_id=<%=@role.id%>">
          <span class="glyphicon glyphicon-pencil"></span>
          Edit
        </a>
      </div>
    </div>
    <div class="panel-body">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-6">
            <div class="display-details">
              <h3><strong>Name</strong><%= @role.name%></h3>
              <p><strong>Description</strong><%=@role.description%></p>
              <p><strong>Date Created</strong><%=@role.created_at.strftime("%d/%b/%Y")%></p>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
